{
    "name": "@solana/smooth",
    "version": "1.0.0",
    "description": "Solana Smooth is a lightweight Solana SDK compatible with Solana Kit that provides a simple and intuitive API for interacting with the Solana blockchain.",
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "type": "module",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js"
        }
    },
    "files": [
        "dist",
        "src",
        "README.md",
        "LICENSE"
    ],
    "scripts": {
        "test": "npm run test:unit && npm run test:integration",
        "test:unit": "vitest run --config vitest.unit.config.ts",
        "test:integration": "vitest run --config vitest.integration.config.ts",
        "test:watch": "vitest --config vitest.unit.config.ts",
        "test:watch:integration": "vitest --config vitest.integration.config.ts",
        "test:coverage": "vitest run --config vitest.unit.config.ts --coverage",
        "clean": "rm -rf dist",
        "prebuild": "npm run clean",
        "build": "tsc --build",
        "build:watch": "tsc --watch",
        "prepublishOnly": "npm run build && npm run test:unit",
        "typecheck": "tsc --noEmit",
        "format": "prettier --write .",
        "format:check": "prettier --check .",
        "format:src": "prettier --write 'src/**/*.{ts,js,json}'",
        "format:examples": "prettier --write 'examples/**/*.{ts,js,json}'",
        "demo": "tsx examples/demo.ts"
    },
    "keywords": [],
    "author": "",
    "license": "MIT",
    "packageManager": "pnpm@10.13.1",
    "dependencies": {
        "@solana-program/compute-budget": "^0.8.0",
        "@solana/kit": "^2.3.0"
    },
    "devDependencies": {
        "@solana-program/system": "^0.7.0",
        "@solana/prettier-config-solana": "^0.0.5",
        "@types/node": "^24.2.1",
        "prettier": "^3.6.2",
        "tsx": "^4.20.3",
        "typescript": "^5.9.2",
        "vitest": "^3.2.4"
    }
}
